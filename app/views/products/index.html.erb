<p id="notice"><%= notice %></p>

<h1>Products</h1>


<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <%= image_tag(product.image_url, class: "img-fluid") %>
        <a href="#"><h1><%= product.name %></h1></a>
        <p><%= product.description %></p>
        <strong><%= product.price %></strong>
        <p><%= product.colour %></p>
        <a href="#"><p><%= link_to 'Show', product %></p></a>
        <a href="#"><p><%= link_to 'Edit', edit_product_path(product) %></p></a>
        <a href="#"><p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p></a>
      </div><!-- /col -->
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
